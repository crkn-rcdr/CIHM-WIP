#!/usr/bin/env perl

use strict;
use warnings;
use FindBin;
use lib "$FindBin::RealBin/../lib";
use Getopt::Long;
use CIHM::WIP::Mallet;

use Fcntl qw(:DEFAULT :flock);
my $lockfile = '/var/lock/tdr/mallet';

# Only allow one instance to run at a time..
sysopen(FH, $lockfile, O_WRONLY | O_CREAT) 
  or die "can't open lockfile=$lockfile: $!\n";
flock(FH, LOCK_EX | LOCK_NB)
  or exit 0;

my $conf = "/etc/canadiana/wip/wip.conf";
my $skip = 0;
my $maxprocs = 4;
my $limit;
my $timelimit;
GetOptions (
    'conf:s' => \$conf,
    'skip:i' => \$skip,
    'maxprocs:i' => \$maxprocs,
    'limit:i' => \$limit,
    'timelimit:i' => \$timelimit
    );

CIHM::WIP::Mallet->new({ 
    configpath => $conf, skip => $skip, maxprocs => $maxprocs, 
    limit => $limit, timelimit => $timelimit
                        })->mallet;

1;
__END__
